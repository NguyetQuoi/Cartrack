<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clSignInGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_small"
        android:paddingTop="@dimen/margin_normal"
        android:paddingEnd="@dimen/margin_small">

        <EditText
            android:id="@+id/etUsernameSignIn"
            style="@style/TextAppearance.CarTrack.TextInputLayout.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_text_height"
            android:hint="@string/txt_hint_user_name"
            android:inputType="text"
            android:text="@={viewModel.signInUsername}"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/etPasswordSignIn"
            style="@style/TextAppearance.CarTrack.TextInputLayout.TextInputEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/input_text_height"
            android:layout_marginTop="@dimen/margin_normal"
            android:hint="@string/txt_hint_pw"
            android:inputType="textPassword"
            android:text="@={viewModel.signInPassword}"
            app:layout_constraintTop_toBottomOf="@+id/etUsernameSignIn"
            app:passwordToggle="@{viewModel.isTogglePassword}" />

        <CheckBox
            android:id="@+id/cbPasswordToggleSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/ic_password_toggle"
            android:checked="@={viewModel.isTogglePassword}"
            app:layout_constraintBottom_toBottomOf="@id/etPasswordSignIn"
            app:layout_constraintEnd_toEndOf="@id/etPasswordSignIn"
            app:layout_constraintTop_toTopOf="@id/etPasswordSignIn" />

        <Button
            android:id="@+id/btContinueSignIn"
            style="@style/Widget.CarTrack.Button.Secondary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/_45sdp"
            android:enabled="@{viewModel.enableContinueSignInButton, default=false}"
            android:onClick="@{v -> viewModel.onContinueSignIn()}"
            android:text="@string/cont"
            app:layout_constraintTop_toBottomOf="@id/etPasswordSignIn" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            app:layout_constraintTop_toBottomOf="@+id/btContinueSignIn" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <data>

        <variable
            name="viewModel"
            type="com.example.cartrack.ui.login.LoginViewModel" />
    </data>
</layout>